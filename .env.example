# Povinné proměnné pro Coolify
OPENAI_API_KEY=your-api-key-here

# URL konfigurace (pro lokální vývoj)
# V produkci použijte:
# BACKEND_URL=https://api.vase-domena.com
# FRONTEND_URL=https://vase-domena.com
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Backend konfigurace
# V produkci použijte:
# NODE_ENV=production
# DEBUG=False
NODE_ENV=development
DEBUG=True

# Backend API konfigurace
API_V1_PREFIX=/api/v1
PROJECT_NAME=MKN-11 Asistované Kódování
VERSION=1.0.0

# Backend CORS nastavení (čárkou oddělené hodnoty)
# V produkci použijte:
# ALLOWED_HOSTS=https://vase-domena.com,https://api.vase-domena.com
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000

# Backend cache a limity
CACHE_TTL=3600
MAX_CACHE_SIZE=1000
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE_MB=10

# OpenAI konfigurace
MODEL_NAME=gpt-4-1106-preview
MAX_TOKENS=2000
TEMPERATURE=0.3

# Cesty k datům
# V produkci použijte:
# MKN11_EXCEL_PATH=/app/data/mkn-11-terminologie-202403.xlsx
MKN11_EXCEL_PATH=./data/mkn-11-terminologie-202403.xlsx